<!DOCTYPE HTML>
<html>
	<head>
		<title>Cars for Sale: <%=item.name%></title>
		<link rel="stylesheet" href="/style.css">
	</head>
	<body>
		<a href="/"><h1>Cars for Sale</h1></a>
		<dl>
			<dt>Make name</dt>
			<dd><a href="/makes/<%=item.id%>"><%=item.name%></a></dd>
			<% if (item.description) { %>
			<dt>Make description</dt>
			<dd><%=item.description%></dd>
			<% } %>
			<dt>Models</dt>
			<dd>
				<% if (related_items.length > 0) { %>
				<ul>
					<% related_items.forEach(function(related_item) { %>
					<li>
						<a href="/models/<%=related_item._id%>">
							<%=related_item.name%>
						</a>
					</li>
					<% }); %>
				</ul>
				<% } else { %>
				No models have been added.
				<% } %>
			</dd>
		</dl>
		<div class="control">
			<h2>Add or update a car model</h2>
			<script>
			function onFormSubmit(form) {
				form.action = form.action + form.elements['item[id]'].value;
				console.log(form.action);
				return true;
			} 
			</script>
			<form id="create-model" method="post" action="/models/" 
    				onsubmit="return onFormSubmit(this);">
				<!-- The line above dynamically sets the PUT destination when the -->
				<!-- form is submitted. -------------------------------------------->
				<input type="hidden" name="_method" value="put">
				<!-- The line above tells the server to treat this as a PUT request. -->
				<input type="hidden" name="item[make]" value="<%=item._id%>">
	    			<label>Model ID<br>
					(lowercase letters only, no spaces):<br>
					<input name="item[id]" type="text" required 
	        				placeholder="escape">
					<select name="item[id]">
						<%  related_items.forEach(function(related_item) { %>
						<option value="<%=related_item._id%>">
						<%=related_item._id%>
						</option>
						<% }); %>
					</select>
				</label>
				<label>Model name:<br>
					<input name="item[name]" type="text" required 
	        				placeholder="Escape">
					<select name="item[name]">
						<%  related_items.forEach(function(related_item) { %>
						<option value="<%=related_item._id%>">
						<%=related_item.name%>
						</option>
						<% }); %>
					</select>
				</label>
				<label>Model image:<br>
					<input name="item[image]" type="url" size="80"
						placeholder="http://www.image.com/model.jpg">
					<input name="item[image]" type="file">
				</label>
				<button>Add or update</button>
			</form>
		</div>
	</body>
</html>