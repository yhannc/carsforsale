<!DOCTYPE html>
<html>
	<head>
		<title>Cars for Sale: Cars</title>
		<link rel="stylesheet" href="/style.css">
	</head>
	<body>
		<a href="/"><h1>Cars for Sale</h1></a>
		<% if (items.length > 0) { %>
		<ul>
			<% items.forEach(function(item) { %>
			<li><a href="/cars/<%=item._id%>"><%=item.name%></a></li>
			<% }); %>
		</ul>
		<% } else { %>
		<div>No cars found.</div>
		<% } %>
		<div class="control">
			<h2>Search for cars</h2>
			<form method="get" action="/cars/">
				<label>Car make:<br> 
					<select name="make" required>
						<%  makes.forEach(function(make) { %>
						<option value="<%=make%>">
						<%=make%>
						</option>
						<% }); %>
					</select>
				</label>				
				<label>Car model: <br>
					<select name="model" required>
						<%  models.forEach(function(model) { %>
						<option value="<%=model%>">
						<%=model%>
						</option>
						<% }); %>
					</select>
				</label>
				<label>Car model-year: <br>      				   
					<select name="modelyear">
                    				<% for (var modelyear = 2012; modelyear >= 1990; modelyear = modelyear-1) {%>
						<option value="<%=modelyear%>">
						<%=modelyear%>
						</option>
            					<% } %>
          				</select>
       				</label>
				<button>Search</button>
			</form>
		</div>
	</body>
</html>