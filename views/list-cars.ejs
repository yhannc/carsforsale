<!DOCTYPE html>
<html>
	<head>
		<title>Cars for Sale: Cars</title>
		<link rel="stylesheet" href="/style.css">
	</head>
	<body>
		<a href="/"><h1>Cars for Sale</h1></a>
		<div id="cars">
			<% if (items.length > 0) { %>
			<ul class="all">
				<% items.forEach(function(item) { %>
				<li class="car"><a rel="car" href="/cars/<%=item._id%>"><%=item.name%></a></li>
				<% }); %>
			</ul>
			<% } else { %>
			No cars found.
			<% } %>
		<div>
		<div class="control">
			<h2>Search for cars</h2>
			<form class="car-search" method="get" action="/cars/">
				<label>Car make:<br> 
					<select name="make">
						<option></option>	
						<%  makes.forEach(function(make) { %>
						<option value="<%=make%>">
						<%=make%>
						</option>
						<% }); %>
					</select>
				</label>				
				<label>Car model: <br>
					<select name="model">
						<option></option>
						<%  models.forEach(function(model) { %>
						<option value="<%=model%>">
						<%=model%>
						</option>
						<% }); %>
					</select>
				</label>
				<label>Car model-year: <br>      				   
					<select name="modelyear">
						<option></option>
                    				<% for (var modelyear = 2012; modelyear >= 1995; modelyear = modelyear-1) {%>
						<option value="<%=modelyear%>">
						<%=modelyear%>
						</option>
            					<% } %>
          				</select>
       				</label>
				<button>Search</button>
			</form>
		</div>
	</body>
</html>