<!DOCTYPE html>
<html>
	<head>
		<title>Cars for Sale: Models</title>
		<link rel="stylesheet" href="/style.css">
	</head>
	<body>
		<a href="/"><h1>Cars for Sale</h1></a>
		<% if (items.length > 0) { %>
		<ul>
			<% items.forEach(function(item) { %>
			<li><a href="/models/<%=item._id%>"><%=item.name%></a></li>
			<% }); %>
		</ul>
		<% } else { %>
		<div>No models found.</div>
		<% } %>
		<div class="control">
			<h2>Search for models</h2>
			<script>
			function onFormSubmit(form) {
			form.action = form.action + form.elements['item[id]'].value;
				console.log(form.action);
				return true;
			} 
			</script>
			<form method="get" action="/models/">
        			<label>Car model: 
					<select name="model" required>
                				<%  items.forEach(function(items) { %>
            					<option value="<%=items._id%>">
              						<%=items.name%>
           	 				</option>
            					<% }); %>
          				</select>
				</label>
        			<button>Search</button>
     			</form>
		</div>
	</body>
</html>